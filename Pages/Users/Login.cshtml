@page
@model ProjectPRN221.Pages.Users.LoginModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    .login_Form {
        margin: 100px auto;
        text-align: center;
        height: 500px;
        width: 300px;
        background-color: #82b09e
    }

    .input1 {
        padding-top: 40px;
        padding-bottom: 10px;
    }

    h2 {
        padding-top: 40px;
        font-size: 40px;
        margin-top: 30px;
        color: #3b5d50;
    }

    .input2 {
        padding-bottom: 20px;
    }

    input {
        height: 30px;
        width: 200px;
        border-radius: 5px;
        border: 3px solid #3b5d50;
        background-color: rgb(238, 247, 255);
    }

    button {
        width: 100px;
        height: 30px;
        border-radius: 5px;
        background-color: #3b5d50;
        border: none;
        color: azure;
        font-size: 16px;
        font-weight: 600;
    }

        button:hover {
            cursor: pointer;
            background-color: #3b5d50;
        }
</style>
<body>
    <form class="login_Form" method="post">
        <h2>Login</h2>
        <div class="input1">
            <input type="text" id="Username" name="Username" placeholder="Username" required />
        </div>
        <div class="input2">
            <input type="password" id="Password" name="Password" placeholder="Password" required />
        </div>
        <button type="submit">Login</button>
        @if (ViewData["ErrorMessage"] != null)
        {
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
        }
    </form>
</body>
</html>